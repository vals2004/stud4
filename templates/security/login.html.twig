{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('build/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                      <h2>Login</h2>
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.message }}
                            </div>
                        {% endif %}

                        {{ form_start(form, { 'action': path('login_check'), 'method': 'post' }) }}
                        <div class="form-group">
                            {{ form_widget(form._username, { 'attr': { 'class': 'form-control', 'placeholder' : 'Email Address' } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form._password, { 'attr': { 'class': 'form-control', 'placeholder' : 'Password'  } }) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form._remember, { 'attr': { } }) }}
                        </div>

                        <div class="forgot" style="height:20px">
                            <a style="float:left" href="{{ path('forgot_password') }}">Forgot Password?</a>
                            <a style="float:right" href="{{ path('registration') }}">Registration</a>
                        </div>

                        <div class="auth-btn-section">
                            {{ form_widget(form.submit, { 'label': 'Login', 'attr': { 'class': 'btn btn-small btn-primary' } }) }}
                        </div>
                        {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>    
{% endblock %}


